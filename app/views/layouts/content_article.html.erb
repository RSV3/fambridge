<% provide(:title, @content.title) %>
<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900|Alegreya+Sans:300,400' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render :partial => 'layouts/google_analytics_production' if Rails.env.production? %>
  <%= render :partial => 'layouts/google_analytics_staging' if Rails.env.staging? %>
  <%= render :partial => 'layouts/segment_io_production' if Rails.env.production? %>
  <%= render :partial => 'layouts/segment_io_staging' if Rails.env.staging? %>
  <style type="text/css">
    ul {
      list-style-type: square;
    }
  </style>

  <meta property="og:title" content="<%= @content.title %>" />
  <meta property="og:site_name" content="Family Bridge" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:description" content="<%= @content.summary %>" />
</head>
<body>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=147240776490";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <!-- For content site -->
  <div id="content">
  </div>
  <div class="container">
    <%= render "content/header" %>
  
    <div class="fb-content-container">
      <div class="row">
        <div class="col-xs-12 col-md-8">
          <%= yield %>
          <div class="article-share">
            <a href="https://twitter.com/share?text=<%= @page_title %> @Family_Bridge" class="twitter-share-button" data-related="Family_Bridge:Get Updates on Family Bridge" data-lang="en" data-size="large" data-count="none"><%= image_tag "twitter_25.png" %></a> &nbsp;
            <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank">
              <%= image_tag "facebook_25.png" %>
            </a>
          </div>
        </div>

        <div class="col-xs-12 col-md-4 side-bar">
          <div class="row">
            <div class="col-xs-12">

              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %> 

              <div class="content-form-label">
                Are you interested in further updates?
              </div>
              <%= form_tag do %>
                <div class="form-group">
                  <%= text_field_tag :name, nil, class: "form-control", placeholder: "Your Name" %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email" %>
                </div>
                <%= submit_tag("Notify me!", class: "btn btn-lg btn-primary", id: "notify-me") %>
              <% end %>
            </div>
          </div>   
        </div>
      </div> <!-- row for first part of content includes two columns -->

    </div>

    <%= debug(params) if Rails.env.development? %>
  </div>

  <footer>
  <div class="footer-container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <span class="contact-us-footer">Contact us:</span> email address
        </div>
      </div>
  </div>
  </footer>

  <script type="text/javascript">
    $(document).ready(function() {
      $('#notify-me').on('click', function() {
        ga('send', 'event', 'Content Article', 'Submit Email');
      });
    });
  </script>

  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="http://platform.twitter.com/widets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

</body>
</html>
