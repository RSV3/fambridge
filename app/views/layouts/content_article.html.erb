<% provide(:title, @content.title) %>
<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900|Alegreya+Sans:300,400' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <style type="text/css">
    ul {
      list-style-type: square;
    }
  </style>

  <meta property="og:title" content="<%= @content.title %>" />
  <meta property="og:site_name" content="Family Bridge" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:description" content="<%= @content.summary %>" />
</head>
<body>

  <div id="fb-root"></div>

  <!-- twitter js -->
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

  <!-- For content site -->
  <div id="content">
  </div>
  <div class="container">
    <%= render "content/header" %>
  
    <div class="fb-content-container">
      <div class="row">
        <div class="col-xs-12 col-md-8">
          <%= yield %>
          <div class="article-share">
            <div class="share-button tweet-share-adjust">
              <a href="https://twitter.com/share?text=<%= @content.title %> @Family_Bridge" class="twitter-share-button" data-related="Family_Bridge:Get Updates on Family Bridge" data-lang="en" data-count="none">Share</a>
            </div>
            <div class="share-button">
              <div class="fb-share-button" data-href="<%= request.original_url %>" data-type="button_count"></div>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-md-4 side-bar">
          <div class="row">
            <div class="col-xs-12">

              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %> 

              <div class="content-form-label">
                Are you interested in further updates?
              </div>
              <%= form_tag({:action => "show", :controller => "content"}, {:class => "email-submit-form"}) do %>
                <div class="form-group">
                  <%= text_field_tag :name, nil, class: "form-control", placeholder: "Your Name" %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email" %>
                </div>
                <%= submit_tag("Notify me!", class: "btn btn-lg btn-primary", id: "notify-me") %>
              <% end %>
            </div>
          </div>   
        </div>
      </div> <!-- row for first part of content includes two columns -->

    </div>

    <%= debug(params) if Rails.env.development? %>
  </div>

  <footer>
  <div class="footer-container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <span class="contact-us-footer">Contact us:</span> email address
        </div>
      </div>
  </div>
  </footer>


</body>
</html>
